{
  "name": "lui",
  "version": "1.0.0",
  "description": "Lightweight UI",
  "main": "main.js",
  "dependencies": {
    "sass": "^1.26.10"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.5",
    "cssnano": "^4.1.10",
    "postcss-cli": "^7.1.1"
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "IE 10"
  ],
  "cssnano": {
    "preset": [
      "default",
      {
        "discardComments": {
          "removeAll": true
        }
      }
    ]
  },
  "postcss": {
    "map": false
  },
  "scripts": {
    "watch": "sass --watch main.scss main.css",
    "autoprefixer": "postcss --map false *.css --use autoprefixer -d build/",
    "nano": "postcss *.css --use cssnano -d build/",
    "build": "postcss --map false *.css --use autoprefixer -d build/ && postcss --map false *.css --use cssnano -d build/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cesarlevel/lui.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cesarlevel/lui/issues"
  },
  "homepage": "https://github.com/cesarlevel/lui#readme"
}
